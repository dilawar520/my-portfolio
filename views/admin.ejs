  <style>
        * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  font-family: Arial, sans-serif;
}
.navbar {
  background-color: rgb(0, 0, 33);
  color: white;
  padding: 15px 25px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.logo {
  font-size: 24px;
font-weight: 900;
  letter-spacing: 1px;
}
.hamburger {
  display: none;
  font-size: 28px;
  cursor: pointer;
}
.nav-links {
  list-style: none;
  display: flex;
  gap: 20px;
}

form button{
    margin: 0px 1rem;
    list-style: none;
    background-color: transparent;
    font-size: x-large;
    border: none;
    color: white;
    padding: 5px;
    border-radius: 5px;
    font-weight: bold;
}
.navbar ul form button  {
  color: white;
  font-size: x-large;
  display: flex;
  padding: 5px;
  border-radius: 10px;
  gap: 30px;
  font-weight: bold;
  background-color: transparent;
  text-decoration: none;
  font-size: 16px;
}

.navbar ul form button:hover {
  color:burlywood;
  cursor: pointer;
   font-size: 1.03rem ;
}
/* Responsive Styles */
@media (max-width: 768px) {
    .navbar{
        width: 100vw;
    }
  .hamburger {
    display: block;
  }
  .nav-links {
    display: none;
    flex-direction: column;
    background-color: #111;
    position: absolute;
    top: 60px;
    right: 0;
    width: 100%;
    text-align: right;
    padding: 10px 20px;
  }
  .nav-links.show {
    display: flex;
  }
  .navbar ul form button {
    margin: 10px 0;
  }
}



